<h1 class="text-center mt-4">Banking</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model:[current_user, @account, @transaction], class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row">
          <%= f.label :amount, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.number_field :amount, class: "form-control shadow rounded", placeholder: "Enter amount" %>
          </div>
        </div>
        <%= f.hidden_field :tr_action, value: @tr_action %>

        <div class="form-group row justify-content-center">
          <%= f.submit @tr_action == "credit" ? "Deposit" : "Withdraw", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 