<% if @transactions.present? %>
  <h1 class="text-center mt-4">Transactions</h1>
  <div class="container container-card">
    <div class="row">
      <div class="col-12">
        <table class="table table-bordered table-striped table-active">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Amount</th>
              <th scope="col">Type</th>
            </tr>
          </thead>
          <tbody>
          <% @transactions.each do |transaction| %>
              <tr>
                <th scope="row"><%= transaction.created_at.strftime('%v - %r') %></th>
                <td>â‚¹<%= transaction.amount %></td>
                <td><%= transaction.tr_action %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="flickr_pagination">
      <%= will_paginate @transactions, :container => false %>
  </div>
<% end %>